<Window x:Class="KoiManagementWPF.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiManagementWPF"
        mc:Ignorable="d"
        Title="AdminDashboard" Height="450" Width="800">
    <Grid>
        <Label Content="Koi ads management system" HorizontalAlignment="Center" Height="53" Margin="0,51,0,0" VerticalAlignment="Top" Width="338" FontSize="24" FontWeight="Bold"/>
        <Button Content="Manage account" HorizontalAlignment="Center" Height="48" Margin="0,169,0,0" VerticalAlignment="Top" Width="188" Click="ManageAccount_Click" FontWeight="Bold" Background="#FFE5C1C1" RenderTransformOrigin="1.162,-0.485"/>
        <Button Content="Manage advertisement" HorizontalAlignment="Center" Height="48" Margin="0,300,0,0" VerticalAlignment="Top" Width="188" Click="ManageAds_Click" FontWeight="Bold" Background="#FFE5C1C1"/>
        <Button x:Name="ManageKoiFish" Content="Manage koi fish" HorizontalAlignment="Center" Height="48" Margin="0,232,0,0" VerticalAlignment="Top" Width="188" Click="ManageKoiFish_Click" FontWeight="Bold" Background="#FFE5C1C1"/>

    </Grid>
</Window>
